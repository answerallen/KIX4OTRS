<div id="ChangeInfo" class="WidgetSimple CanDrag Expanded">
    <div class="Header">
        <div class="WidgetAction Toggle">
            <a title="[% Translate("Show or hide the content") | html %]" href="#" id="KIXSidebarChangeInfoBlockOpen" aria-controls="Core_UI_AutogeneratedID_0" aria-expanded="false">
                <i class="fa fa-caret-right"></i>
                <i class="fa fa-caret-down"></i>
            </a>
        </div>
        <h2>[% Translate(Data.Title) | html %]</h2>
    </div>
