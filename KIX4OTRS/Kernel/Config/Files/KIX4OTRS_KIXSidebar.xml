        <SubGroup>Frontend::Agent::KIXSidebarBackend</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Example">[regexp]AgentTicketZoom.*</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="KIXSidebarTools###Data" Required="0" Valid="0">
